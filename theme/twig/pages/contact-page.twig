{% extends 'pages/page.twig' %}



{% block content %}
	<div class="container">
		<div class="columns">
			<div class="col-2 contact-detail">
				{{ block('page_content') }}
				<p>
					<strong>Phone:</strong> <a title="{{ config.phone }}" href="tel:{{ config.getPhoneDigits() }}">{{ config.phone }}</a><br />
					<strong>Email:</strong> <a title="{{ config.email }}" href="mailto:{{config.email }}">{{ config.email }}</a>
				</p>
				<p><strong>Address:</strong><br> {{ config.address|nl2br }}</p>
				<ul class="social-links">
					{% for item in config.getVisibleSocialMediaLinks() %}
					<li>
						<a href="{{item.url}}" target="_blank" title="{{item.text}}">
							<img src="{{item.image_dark.getLink()}}" alt="Social Media">
						</a>
					</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-2 form-contact">
				<h2>{{ contactForm.name }}</h2>
				{{ contactForm.outputForm()|raw }}

			</div>
		</div>
	</div>
{% endblock %}

{% block page_sections %}
	{{ parent() }}
	
	<div class="contact-map">
		<div class="mapouter">
			<div class="gmap_canvas">
				<iframe class="gmap_iframe" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=600&amp;height=420&amp;hl=en&amp;q={{config.place_name_on_google_map}}&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
				<a href="/">{{config.getSiteName()}}</a>
			</div>
			<style>.mapouter{position:relative;text-align:right;width:100%;height:420px;}.gmap_canvas {overflow:hidden;background:none!important;width:100%;height:420px;}.gmap_iframe {height:420px!important;}</style>
		</div>
	</div>

{% endblock %}

{% block class_body %}contact-page{% endblock %}
{% block class_content %}{% endblock %}