{% extends 'template/template.twig' %}

{% block content %}
	{% block page_image %}
		{{ page.image.tag('content-image', page.imageDescription)|raw }}
	{% endblock %}
	<div class="container">
		<div class="content">
			{% block content_title %}
				<h1>{{ page.getMainHeading() }}</h1>
			{% endblock %}
			{% block page_content %}
				{{ page.getPageContent()|expandHtml }}
			{% endblock %}
		</div>
		<div class="kidneys-list">
			{% for group in page.group_links %}
			<div class="kidneys-item">
				<div class="kidneys-wrap">
					<h3>{{group.label}}</h3>
					<div class="detail">{{group.content | raw}}</div>
					<ul class="list-file">
						{% for link in group.links %}
						<li>
							{% include 'widgets/links/custom-link.twig' with {
								link: link,
							} %}
						</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

{% block class_body %}your-kidneys-page about-us{% endblock %}
{% block class_content %}{% endblock %}
